{
  "manifest_version": 3,
  "name": "LinkedIn Job Search Time Filter",
  "version": "1.0",
  "description": "Adds 30-minute and 1-hour options to LinkedIn job search time filter",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.linkedin.com/jobs/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  }
} 